/* pages/test/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f6fa;
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.question-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
  flex: 1;
}

.question-content {
  font-size: 36rpx;
  color: #2c3e50;
  line-height: 1.5;
  margin-bottom: 40rpx;
}

.options-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.option {
  padding: 30rpx;
  border-radius: 15rpx;
  background-color: #f8f9fa;
  border: 2rpx solid #e0e0e0;
  transition: all 0.3s ease;
}

.option.selected {
  background-color: #3498db;
  border-color: #3498db;
}

.option-text {
  font-size: 32rpx;
  color: #34495e;
}

.option.selected .option-text {
  color: white;
}

.action-container {
  margin-top: auto;
}

.buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.btn-prev, .btn-confirm {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.btn-prev {
  background: white;
  color: #3498db;
  border: 2rpx solid #3498db;
}

.btn-prev[disabled] {
  opacity: 0.5;
  background-color: #f8f9fa;
  border-color: #e0e0e0;
  color: #95a5a6;
}

.btn-confirm {
  background: linear-gradient(45deg, #3498db, #2980b9);
  color: white;
}

.btn-confirm.disabled {
  opacity: 0.5;
}

.btn-quit {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  background: white;
  color: #e74c3c;
  border: 2rpx solid #e74c3c;
  font-size: 32rpx;
}