.container {
  min-height: 100vh;
  background-color: #f5f6fa;
  padding: 40rpx;
  box-sizing: border-box;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #2c3e50;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #7f8c8d;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  background-color: white;
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.item-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.date {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

.time {
  font-size: 24rpx;
  color: #95a5a6;
}

.item-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.score-info {
  display: flex;
  align-items: baseline;
  gap: 10rpx;
}

.score-label {
  font-size: 24rpx;
  color: #7f8c8d;
}

.score-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #2c3e50;
}

.detail-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 5rpx;
}

.questions-count, .accuracy {
  font-size: 24rpx;
  color: #7f8c8d;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 2rpx solid #ecf0f1;
}

.status {
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.status.normal {
  background-color: #e8f6f3;
  color: #27ae60;
}

.status.warning {
  background-color: #fdedec;
  color: #e74c3c;
}

.arrow {
  font-size: 24rpx;
  color: #bdc3c7;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #95a5a6;
}