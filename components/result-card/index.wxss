.result-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}

.score-section {
  text-align: center;
}

.score-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 10rpx;
  display: block;
}

.score-value {
  font-size: 60rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-right: 10rpx;
}

.score-sem {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.divider {
  height: 2rpx;
  background-color: var(--border-color);
  margin: 30rpx 0;
}

.detail-section {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.detail-item {
  text-align: center;
}

.detail-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
  display: block;
}

.detail-value {
  font-size: 32rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.action-section {
  margin-top: 30rpx;
}

.btn-detail {
  width: 100%;
  height: 80rpx;
  border-radius: 40rpx;
  background: var(--primary-color);
  color: white;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
