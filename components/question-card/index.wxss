.question-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
}

.question-content {
  font-size: 32rpx;
  color: var(--text-primary);
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.options-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.option {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-radius: 15rpx;
  background-color: #f8f9fa;
  border: 2rpx solid #e0e0e0;
  transition: all 0.3s ease;
}

.option.selected {
  background-color: var(--primary-color);
  border-color: var(--primary-color);
}

.option-index {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background-color: #e0e0e0;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.option.selected .option-index {
  background-color: white;
  color: var(--primary-color);
}

.option-text {
  font-size: 28rpx;
  color: var(--text-primary);
  flex: 1;
}

.option.selected .option-text {
  color: white;
}